<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>To</th>
      <th>From</th>
      <th>Message body</th>
      <th>Direction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.subject %></td>
        <td><%= email.to %></td>
        <td><%= email.from %></td>
        <td><%= email.message_body %></td>
        <td><%= email.direction %></td>
        <td><%= link_to 'Show', email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email', new_email_path %>
